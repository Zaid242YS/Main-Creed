                name: "The Halal Hustle",
                foundation: "Ethical entrepreneurship within Islamic bounds",
                features: ["Halal business opportunities", "Islamic compliance checking", "Mentorship connections", "Community support"],
                targetAudience: "Young Muslims starting businesses"
            }
        ];

        const storyTemplates = [
            {
                title: "The Migration Story",
                framework: "From struggle (Makkah) to success (Madinah) through faith",
                conversionPath: "Prophet's Business Journey"
            },
            {
                title: "The Day I Realized My 'Hustle' Contradicted My Tawakkul",
                framework: "Personal crisis leading to Islamic solution",
                conversionPath: "Niyyah Business Planner"
            },
            {
                title: "How Islamic Financial Principles Saved My Business",
                framework: "Contrast between conventional and Islamic approaches",
                conversionPath: "Rizq Tracker"
            },
            {
                title: "Why Muslim Entrepreneurs Track Money Differently",
                framework: "Educational approach showing Islamic distinction",
                conversionPath: "Rizq Tracker"
            },
            {
                title: "The Business That Failed Because It Only Served Me",
                framework: "Community-focused transformation",
                conversionPath: "Ummah Market Validator"
            },
            {
                title: "How Community-First Thinking 10x'd My Revenue",
                framework: "Success through service",
                conversionPath: "Ummah Economics Series"
            },
            {
                title: "From Modern Business Plans to 'Would-Think-of-It' Plans",
                framework: "Comparison framework",
                conversionPath: "What Would Prophet Ô∑∫ Do Framework"
            }
        ];

        // Helper Functions
        function canProceed() {
            if (currentStep === 1) {
                return assessmentData.primaryFocus && assessmentData.audienceSize && assessmentData.techLevel;
            }
            if (currentStep === 2) {
                return selectedConcept !== null;
            }
            return true;
        }

        function getGeneratedConcepts() {
            if (!assessmentData.primaryFocus) return [];
            
            let filtered = appConcepts.filter(concept => {
                if (assessmentData.primaryFocus === 'starting' && concept.name.includes('Halal')) return true;
                if (assessmentData.primaryFocus === 'validating' && concept.name.includes('Ummah')) return true;
                if (assessmentData.primaryFocus === 'scaling' && concept.name.includes('Rizq')) return true;
                return false;
            });

            return filtered.length > 0 ? filtered : appConcepts.slice(0, 3);
        }

        function getStoryFramework() {
            if (!selectedConcept) return [];
            
            let filtered = storyTemplates.filter(template => {
                return template.conversionPath.includes(selectedConcept.name.split(' ')[0]);
            });

            return filtered.length > 0 ? filtered : storyTemplates.slice(0, 3);
        }

        // Render Functions
        function renderProgressSteps() {
            const container = document.getElementById('stepsContainer');
            let html = '';

            steps.forEach((step, index) => {
                const isActive = index === currentStep;
                const isCompleted = index < currentStep;
                
                let iconClass = 'inactive';
                let titleClass = 'inactive';
                
                if (isCompleted) {
                    iconClass = 'completed';
                } else if (isActive) {
                    iconClass = 'active';
                    titleClass = 'active';
                }

                html += `
                    <div class="step-wrapper">
                        <div class="step">
                            <div class="step-icon ${iconClass}">
                                ${step.icon}
                            </div>
                            <span class="step-title ${titleClass}">${step.title}</span>
                        </div>
                        ${index < steps.length - 1 ? `
                            <div class="step-line ${index < currentStep ? 'completed' : 'incomplete'}"></div>
                        ` : ''}
                    </div>
                `;
            });

            container.innerHTML = html;
        }

        function renderFoundationStep() {
            return `
                <div class="gradient-box">
                    <h3>Islamic Business Foundation</h3>
                    <p style="color: #374151; margin-bottom: 1rem;">
                        Unlike traditional business tools that focus on isolated pain points, Islamic entrepreneurship 
                        begins with establishing the spiritual foundation that guides all business decisions.
                    </p>
                </div>

                ${islamicPrinciples.map(principle => `
                    <div class="principle-card">
                        <h4>${principle.name}</h4>
                        <p class="description">${principle.description}</p>
                        <div class="application-box">
                            <p>Business Application:</p>
                            <p>${principle.businessApplication}</p>
                        </div>
                    </div>
                `).join('')}

                <div class="advantage-box">
                    <h4>The Creed-to-Commerce Advantage</h4>
                    <p style="color: #374151; margin-bottom: 0.75rem;">
                        When Muslim entrepreneurs ground their business decisions in Islamic principles first, they create ventures that are:
                    </p>
                    <ul class="advantage-list">
                        <li>
                            <span class="checkmark">‚úì</span>
                            <span><strong>Spiritually aligned</strong> - Business becomes worship through right intention</span>
                        </li>
                        <li>
                            <span class="checkmark">‚úì</span>
                            <span><strong>Community-focused</strong> - Success measured by collective benefit</span>
                        </li>
                        <li>
                            <span class="checkmark">‚úì</span>
                            <span><strong>Sustainably profitable</strong> - Barakah in revenue through halal means</span>
                        </li>
                        <li>
                            <span class="checkmark">‚úì</span>
                            <span><strong>Purpose-driven</strong> - Clear mission serving Allah's pleasure</span>
                        </li>
                    </ul>
                </div>
            `;
        }

        function renderAssessmentStep() {
            return `
                <div class="assessment-box">
                    <h3>Market Assessment</h3>
                    <p style="color: #4b5563; margin-bottom: 1.5rem;">
                        Understanding your current position helps us recommend the right Islamic business tools for your journey.
                    </p>

                    <div class="question-section">
                        <label class="question-label">What's your primary business focus right now?</label>
                        ${['starting', 'validating', 'scaling'].map(focus => `
                            <button class="option-button ${assessmentData.primaryFocus === focus ? 'selected' : ''}" 
                                    onclick="selectOption('primaryFocus', '${focus}')">
                                <span style="text-transform: capitalize;">${focus} a new business venture</span>
                            </button>
                        `).join('')}
                    </div>

                    <div class="question-section">
                        <label class="question-label">What's your target audience size?</label>
                        ${['local', 'regional', 'global'].map(size => `
                            <button class="option-button ${assessmentData.audienceSize === size ? 'selected' : ''}" 
                                    onclick="selectOption('audienceSize', '${size}')">
                                <span style="text-transform: capitalize;">${size} Muslim community</span>
                            </button>
                        `).join('')}
                    </div>

                    <div class="question-section">
                        <label class="question-label">Your technical comfort level?</label>
                        ${['beginner', 'intermediate', 'advanced'].map(level => `
                            <button class="option-button ${assessmentData.techLevel === level ? 'selected' : ''}" 
                                    onclick="selectOption('techLevel', '${level}')">
                                <span style="text-transform: capitalize;">${level}</span>
                            </button>
                        `).join('')}
                    </div>
                </div>
            `;
        }

        function renderConceptStep() {
            const concepts = getGeneratedConcepts();
            
            return `
                <div class="assessment-box">
                    <h3>Islamic App Concepts for You</h3>
                    <p style="color: #4b5563; margin-bottom: 1.5rem;">
                        Based on your assessment, here are app concepts that align with Islamic principles and your goals.
                    </p>

                    ${concepts.length === 0 ? `
                        <div class="empty-state">
                            <p>Complete the assessment to see personalized app concepts.</p>
                        </div>
                    ` : concepts.map((concept, index) => `
                        <div class="concept-card ${selectedConcept?.name === concept.name ? 'selected' : ''}" 
                             onclick='selectConcept(${JSON.stringify(concept).replace(/'/g, "&apos;")})'>
                            <div class="concept-header">
                                <h4>${concept.name}</h4>
                                ${selectedConcept?.name === concept.name ? '<span class="selected-check">‚úì</span>' : ''}
                            </div>
                            <p class="concept-detail">
                                <strong>Foundation:</strong> ${concept.foundation}
                            </p>
                            <div style="margin-bottom: 0.75rem;">
                                <p style="font-size: 0.875rem; font-weight: 600; color: #374151; margin-bottom: 0.5rem;">Key Features:</p>
                                <ul class="features-list">
                                    ${concept.features.map(feature => `
                                        <li><span class="bullet">‚Ä¢</span>${feature}</li>
                                    `).join('')}
                                </ul>
                            </div>
                            <p style="font-size: 0.875rem; color: #1d4ed8;">
                                <strong>Target:</strong> ${concept.targetAudience}
                            </p>
                        </div>
                    `).join('')}
                </div>
            `;
        }

        function renderStoryStep() {
            const stories = getStoryFramework();
            
            return `
                <div class="assessment-box">
                    <h3>Your Story Framework</h3>
                    <p style="color: #4b5563; margin-bottom: 1.5rem;">
                        Effective Islamic marketing tells authentic stories that connect faith with practical solutions.
                    </p>

                    ${selectedConcept ? `
                        <div class="selected-concept-box">
                            <p>Selected Concept:</p>
                            <p>${selectedConcept.name}</p>
                        </div>
                    ` : ''}

                    ${stories.length === 0 ? `
                        <div class="empty-state">
                            <p>Select an app concept to see recommended story frameworks.</p>
                        </div>
                    ` : stories.map(story => `
                        <div class="story-card">
                            <h4>${story.title}</h4>
                            <p class="story-detail">
                                <strong>Framework:</strong> ${story.framework}
                            </p>
                            <p class="conversion-path">
                                <strong>Conversion Path:</strong> ${story.conversionPath}
                            </p>
                        </div>
                    `).join('')}
                </div>
            `;
        }

        function renderActionPlan() {
