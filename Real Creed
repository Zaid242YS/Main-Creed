        }

        function renderStepContent() {
            const contentDiv = document.getElementById('stepContent');
            
            switch(currentStep) {
                case 0:
                    contentDiv.innerHTML = renderFoundationStep();
                    break;
                case 1:
                    contentDiv.innerHTML = renderAssessmentStep();
                    break;
                case 2:
                    contentDiv.innerHTML = renderConceptStep();
                    break;
                case 3:
                    contentDiv.innerHTML = renderStoryStep();
                    break;
                case 4:
                    contentDiv.innerHTML = renderActionPlan();
                    break;
            }
        }

        function updateNavigation() {
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');

            prevBtn.disabled = currentStep === 0;
            nextBtn.disabled = currentStep === steps.length - 1 || !canProceed();
            
            if (currentStep === steps.length - 1) {
                nextBtn.textContent = 'Complete';
            } else {
                nextBtn.textContent = 'Next ‚Üí';
            }
        }

        // Event Handlers
        function selectOption(field, value) {
            assessmentData[field] = value;
            renderStepContent();
            updateNavigation();
        }

        function selectConcept(concept) {
            selectedConcept = concept;
            renderStepContent();
            updateNavigation();
        }

        function previousStep() {
            if (currentStep > 0) {
                currentStep--;
                renderProgressSteps();
                renderStepContent();
                updateNavigation();
                window.scrollTo(0, 0);
            }
        }

        function nextStep() {
            if (currentStep < steps.length - 1 && canProceed()) {
                currentStep++;
                renderProgressSteps();
                renderStepContent();
                updateNavigation();
                window.scrollTo(0, 0);
            }
        }

        // Initialize
        window.onload = function() {
            renderProgressSteps();
            renderStepContent();
            updateNavigation();
        };
    </script>
</body>
</html>
